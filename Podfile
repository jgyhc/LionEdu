source 'https://github.com/CocoaPods/Specs.git'
platform :ios, ‘9.0‘

def myPods

#请使用pod update进行pod升级，升级后会多出很多警告，请至pod->bulid settings->other warning flags中添加-Wno-documentation、-Wno-nullability-completeness-on-arrays、-Wno-unknown-warning-option 3条配置即可消除大部分警告，如依然还有警告，请另行添加其它配置

#pod 'MLeaksFinder'
#用于检测内存泄漏

pod 'AFNetworking' 

pod 'YYImage'

pod 'YYWebImage'
#网络图片库，统一使用该库，不再使用SDWebImage，请配合NTTools中的NTWebImageTool使用

pod 'pop', '~> 1.0.10'

pod 'YYCache'
#缓存库，用于做网络缓存或者其它缓存操作

pod 'Masonry'
#autolayout库，请配合NTCatergories中的UIView+NTAddForMasonry使用

pod 'YYModel'
pod 'YYText'
#提供了丰富的文本显示效果，以及NB的文字异步解码

#pod 'FLEX', :configurations => ['Debug']
#一款强大的调试工具，包括网络调试，沙盒文件管理以及时时UI调试等,NTCatergories中的UIWindow+NTAddForFLEX已包含了其调用，手机摇一摇就能唤起

pod 'UITableView+FDTemplateLayoutCell'
#cell高度适应

pod 'BlocksKit'

pod 'MJRefresh'

pod 'IQKeyboardManager' #iOS8 and later

pod 'MJPlaceholderView'

#pod 'MJNetWorkKit'

#pod 'CTNetworking'

pod 'CTMediator'

pod 'MJProgressHUD'

pod 'IBProperty/Basis'

pod 'TZImagePickerController'

#pod 'SDPhotoBrowser'

pod 'SDCycleScrollView'

pod 'MJAlertController'

#pod 'LCFastBuildListKit'
pod 'WechatOpenSDK', '= 1.8.5'

pod 'JXCategoryView', '= 1.3.16'

pod 'LCAlertController'

pod 'WSLNativeScanTool'


pod 'SJVideoPlayer'
pod 'YYAsyncLayer'

pod 'AliyunOSSiOS'

#pod 'Ono'

#pod 'KJBannerView' # 轮播图 
end

target 'BigLionEdu' do
myPods
end

